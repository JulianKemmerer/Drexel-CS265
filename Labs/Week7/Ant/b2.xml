<project default="compile">
	<description>
		Compiles 2 files (all files) in current directory
		Added a "clean" target - uses a fileset to remove all *.class files
	</description>

  <target name="compile">
    <javac srcdir='./'/>
  </target>

  <target name="clean">
    <delete>
			<fileset dir="./">
				<include name='*.class'/>
			</fileset>
		</delete>
  </target>
</project>
